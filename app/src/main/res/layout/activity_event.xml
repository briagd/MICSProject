<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/eventImageBtn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/fui_transparent"
                app:srcCompat="@drawable/fui_idp_button_background_phone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLength="64"
                    android:text="Birthday of an old grumpy carrot"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="1dp"
                    app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

                <TextView
                    android:id="@+id/day_monthId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Tuesday, November 12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_from_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:00 - 18:00"
                    android:translationX="86dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="40dp"
                    app:srcCompat="@drawable/ic_menu_mylocation" />

                <TextView
                    android:id="@+id/placeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:text="Margot's Place" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/street_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="87dp"
                    android:text="10, rue de la Frontière" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/city_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="88dp"
                    android:text="Luxembourg, Luxembourg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="40dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@mipmap/people_ic" />

                <TextView
                    android:id="@+id/categoryId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="Party" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_profile_icons" />

                <TextView
                    android:id="@+id/hosted_by"
                    android:layout_width="310dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="6dp"
                    android:text="Hosted by Bachoul el Ghoul" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/going_people_layout"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:translationY="45dp"
                    app:srcCompat="@drawable/eventzy_user" />

                <ImageView
                    android:id="@+id/profile2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:translationY="45dp"
                    app:srcCompat="@drawable/eventzy_user" />

                <ImageView
                    android:id="@+id/profile3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:translationY="45dp"
                    app:srcCompat="@drawable/eventzy_user" />

                <TextView
                    android:id="@+id/number_peeps_going"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="862 People Going"
                    android:translationX="-261dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/description_box"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:text="Did you ever spend a whole weekend playing video games? If so, why not taking it to the next level and spend the weekend designing one? Beval GameJam offers you the possibility to meet with other digital enthusiasts and to collaborate together to develop original multimedia contents from scratch!   Jump into a 48 hours full-immersion experience into the world of game developing, meet new people and learn new things! The co-working space of Technoport SA will be at your disposal for the whole weekend, with possibility to sleep and to shower inside.   To make sure that you get the best out of the experience a team of coaches, experts in different fields of digital creation, will support the teams of developers throughout the jam.   We will also organize a small welcome buffet and a pizza party!   If you are interested in participating, then sign up quickly! Spots are limited...first come first served! In order to register please fill out this form: https://forms.gle/Egqcsja21JurHYRE8  And pay your 10€ participation fee via billetweb: https://www.billetweb.fr/belval-game-jam-1st-edition  Further information on: https://itch.io/jam/belval-game-jam  ...Don't miss it! ;)" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/maps_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <Button
            android:id="@+id/participateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:translationX="315dp"
            tools:layout_marginTop="5dp" />

        <ImageButton
            android:id="@+id/edit_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/edit_ic" />
    </com.google.android.material.navigation.NavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>